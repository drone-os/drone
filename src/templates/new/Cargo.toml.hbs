cargo-features = ["resolver"]

{{replace (replace contents
    "edition = \"2018\"" "$0\nresolver = \"2\"")
    "\\n\\n\\[dependencies\\]\\n" ""}}

[[bin]]
name = "{{crate_name}}"
path = "src/bin.rs"
test = false
doc = false

[features]
default = []
std = [
    "drone-core/std",
    "drone-{{platform_name}}/std",
    "drone-{{bindings_name}}-map/std",
{{~#if dso_name}}
    "drone-{{dso_name}}-dso/std",
{{~/if}}
    "futures/std",
]
heaptrace = ["drone-core/heaptrace"]

[dependencies]
drone-core = { version = "0.13.0" }
drone-{{platform_name}} = { version = "0.13.0"{{#each platform_features}}{{#if @first}}, features = [{{/if}}"{{this}}"{{#if @last}}]{{else}}, {{/if}}{{/each}} }
drone-{{bindings_name}}-map = { version = "0.13.0"{{#each bindings_features}}{{#if @first}}, features = [{{/if}}"{{this}}"{{#if @last}}]{{else}}, {{/if}}{{/each}} }
{{~#if dso_name}}
drone-{{dso_name}}-dso = { version = "0.13.0"{{#each dso_features}}{{#if @first}}, features = [{{/if}}"{{this}}"{{#if @last}}]{{else}}, {{/if}}{{/each}} }
{{~/if}}
futures = { version = "0.3.0", default-features = false }

[profile.release]
lto = true
debug = true
panic = "abort"
